<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ms.square.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/homelogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".etsyblurdemo.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.DASHBOARD" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.SetTemp"
            android:label="SetTemp" >
            <intent-filter>
                <action android:name="android.intent.action.TEMPSET" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.SetLock"
            android:label="SetLock" >
            <intent-filter>
                <action android:name="android.intent.action.LOCKSET" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.Authenticate"
            android:label="Smart Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.Intruder"
            android:label="Anomaly" >
            <intent-filter>
                <action android:name="android.intent.action.INTRUDER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.AwayActivity"
            android:label="AwayStatus" >
            <intent-filter>
                <action android:name="android.intent.action.AWAYSTATUS" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.FacialRecon"
            android:label="Face Recognizer" >
            <intent-filter>
                <action android:name="android.intent.action.FACESTATUS" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.saadahmad.smarthome.Unrecognized"
            android:label="Face Recognizer" >
            <intent-filter>
                <action android:name="android.intent.action.UNRECOGN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
